{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./src",
    "downlevelIteration": true,
		"importHelpers": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"module": "esnext",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"target": "es2015",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2017", "dom"],
		"paths": {
			"@app/*": ["app/*"],
			"@api-client/*": ["api-client/*"],
			"@env/*": ["environments/*"]
		}
	}
}
